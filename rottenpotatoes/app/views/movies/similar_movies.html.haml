-# in app/views/movies/show.html.haml

%h2 Other movies directed by: #{@movie.director}

%table#movies
  %thead
    %tr
      -if @sort == "title"
        %th.hilite Movie Title
      -else 
        %th= link_to "Movie Title", movies_path(:sort => 'title'), :id => "title_header"
      %th Rating
      -if @sort == "release_date"
        %th.hilite Release Date
      -else
        %th= link_to "Release Date", movies_path(:sort => 'release_date'), :id => "release_date_header"
      %th More Info
  %tbody
    - @similar_movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= movie.director
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Back to movie list', movies_path
